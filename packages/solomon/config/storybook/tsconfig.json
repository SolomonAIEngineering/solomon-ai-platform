{
  "extends": ["@solomon/tsconfig/react.json"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["dist", "node_modules"]
}
